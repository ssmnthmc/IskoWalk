@page
@model IskoWalk.Pages.DashboardModel
<link rel="stylesheet" href="~/css/dashboard.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="dashboard">

    <aside class="sidebar">

        <div class="brand">
            <img src="~/images/IskoWalk.png" />
            <span>ISKOWALK</span>
        </div>

        <nav class="menu">
            <a class="active"><i class="fa-solid fa-house"></i>Dashboard</a>
            <a><i class="fa-solid fa-file-lines"></i>My Requests</a>
            <a><i class="fa-solid fa-user"></i>Profile</a>
        </nav>

        <div class="user-box" id="profileBtn">
            <img src="~/images/IskoWalk.png" />
            <div class="user-info">
                <strong>juan.dc</strong>
                <span>Student</span>
            </div>
            <i class="fa-solid fa-chevron-down"></i>
        </div>

        <div class="dropdown" id="dropdownMenu">
            <div class="dropdown-user">
                <strong>juan.dc</strong>
                <small>juan.dc@iskolarngbayan.pup.edu.ph</small>
            </div>
            <hr />
            <a><i class="fa-solid fa-gear"></i> Setting</a>
            <a><i class="fa-solid fa-right-from-bracket"></i> Log out</a>
        </div>

    </aside>

    <main class="content">

        <div class="topbar">
            <h3>Dashboard</h3>
            <button class="btn-main"><i class="fa-solid fa-plus"></i> New Request</button>
        </div>

        <div class="divider"></div>

        <section class="welcome">
            <h2>Welcome, Iskolar!</h2>
            <p>Find a walking companion and help keep the community safe.</p>
        </section>

        <section class="requests">

            <div class="requests-header">
                <h4>Available Walk Requests</h4>
                <button class="refresh"><i class="fa-solid fa-rotate"></i> Refresh</button>
            </div>

            <div class="empty-state">
                <p class="empty-title">No available requests right now.</p>
                <p class="empty-sub">
                    Why not be the first to create one? Your request will appear here for others to accept.
                </p>
                <button class="btn-main">Create a Request</button>
            </div>


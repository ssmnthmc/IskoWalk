@page
@model IskoWalk.Pages.DashboardModel
<link rel="stylesheet" href="~/css/dashboard.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="dashboard">

    @* SIDEBAR *@
    <aside class="sidebar">
        <div class="brand">
            <img src="~/images/IskoWalk.png" />
            <span>ISKOWALK</span>
        </div>

        <nav class="menu">
            <a asp-page="/Dashboard" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/dashboard" ? "active" : "")">
                <i class="fa-solid fa-house"></i>Dashboard
            </a>

            <a asp-page="/MyRequestsActive" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/myrequestsactive" ? "active" : "")">
                <i class="fa-solid fa-file-lines"></i>My Requests
            </a>

            <a asp-page="/Profile" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/profile" ? "active" : "")">
                <i class="fa-solid fa-user"></i>Profile
            </a>
        </nav>

        <div class="user-box" id="profileBtn">
            <img src="~/images/IskoWalk.png" />
            <div class="user-info">
                <strong>juan.dc</strong>
                <span>Student</span>
            </div>
            <i class="fa-solid fa-chevron-down"></i>
        </div>

        <div class="dropdown" id="dropdownMenu">
            <div class="dropdown-user">
                <strong>juan.dc</strong>
                <small>juan.dc@iskolarngbayan.pup.edu.ph</small>
            </div>
            <hr />
            <a><i class="fa-solid fa-right-from-bracket"></i> Log out</a>
        </div>
    </aside>

    <main class="content">

        <div class="topbar">
            <div class="directory"><b>Dashboard</b></div>
            <a asp-page="/Create" class="btn-main"><i class="fa-solid fa-plus"></i> New Request</a>
        </div>

        <div class="divider"></div>

        <h2>Welcome, Iskolar!</h2>
        <p class="subtitle">Find a walking companion and help keep the community safe.</p>

        <section class="requests">

            <div class="requests-header">
                <h4>Available Walk Requests</h4>
                <button class="refresh"><i class="fa-solid fa-rotate"></i> Refresh</button>
            </div>

            @* <div class="empty-state">
                <p class="title">No available requests right now.</p>
                <p class="subtitle">Why not be the first to create one? Your request will appear here for others to accept.</p>
                <a asp-page="/Create" class="btn-main">Create a Request</a>
            </div> *@

			<div class="cards">
				@foreach (var req in Model.Requests)
				{
					<div class="card">

						<div class="card-head">
							<div class="avatar"></div>
							<div>
								<strong>@req.Name</strong>
								<span>Requester</span>
							</div>
						</div>

						<div class="card-info">
							<p><i class="fa-solid fa-location-dot"></i> From <span>@req.From</span></p>
							<p><i class="fa-solid fa-flag"></i> To <span>@req.To</span></p>
							<p><i class="fa-solid fa-clock"></i> Time <span>@req.Time</span></p>
						</div>

						<div class="card-actions">
                            <button class="view" onclick="openDetails(true)">View Details</button>
							<button class="accept"><i class="fa-solid fa-check"></i> Accept</button>
						</div>

					</div>
				}
			</div>
        </section>

        <div id="detailsModal" class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <h2>Walk Request Details</h2>
                        <p>Requested on December 31, 2025</p>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="modal-row user-row grid-2">
                        <div class="user-info-block align">
                            <i class="fa-solid fa-user-tag icon-circle"></i>
                            <div class="user-text-column">
                                <span>Requester</span>
                                <div class="user-name-row">
                                    <div class="avatar-circle"></div>
                                    <strong>Juan Dela Cruz</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-row">
                        <i class="fa-solid fa-location-dot icon-circle"></i>
                        <div>
                            <strong>Route</strong>
                            <p>From: <b>Main Building (Lobby near the stairs)</b></p>
                            <p>To: <b>Pureza LRT Station</b></p>
                        </div>
                    </div>

                    <div class="modal-row grid-2">
                        <div class="info-group">
                            <i class="fa-regular fa-clock icon-circle"></i>
                            <div>
                                <strong>Date & Time</strong>
                                <p>Wednesday, December 31 at 10:29PM</p>
                            </div>
                        </div>
                        <div class="info-group">
                            <i class="fa-solid fa-shirt icon-circle"></i>
                            <div>
                                <strong>Attire Description</strong>
                                <p>Wearing a white shirt and basta kapag maganda, me nayan</p>
                            </div>
                        </div>
                    </div>

                    <div class="modal-row">
                        <i class="fa-solid fa-pen icon-circle"></i>
                        <div>
                            <strong>Additional Notes</strong>
                            <p>Late ako konti hehe. Ayoko ko naghihintay</p>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn-secondary" onclick="closeModal('detailsModal')">Close</button>
                    <button id="markCompleteBtn" class="btn-complete hidden"><i class="fa-solid fa-check"></i>Accept</button>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    const btn = document.getElementById("profileBtn");
    const menu = document.getElementById("dropdownMenu");

    btn.onclick = () => menu.classList.toggle("show");

    document.addEventListener("click", e => {
        if(!btn.contains(e.target) && !menu.contains(e.target)){
            menu.classList.remove("show");
        }
    });

    function openDetails(isAccepted) {
        const modal = document.getElementById('detailsModal');
        const completeBtn = document.getElementById('markCompleteBtn');

        if (isAccepted) {
            completeBtn.classList.remove('hidden');
        } else {
            completeBtn.classList.add('hidden');
        }

        modal.style.display = 'flex';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
    }
</script>

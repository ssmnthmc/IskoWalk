@page
@model IskoWalk.Pages.MyRequestsAcceptedModel
<link rel="stylesheet" href="~/css/myrequests.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="dashboard">

    <aside class="sidebar">

        <div class="brand">
            <img src="~/images/IskoWalk.png" />
            <span>ISKOWALK</span>
        </div>

        <nav class="menu">
            <a asp-page="/Dashboard" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/dashboard" ? "active" : "")">
                <i class="fa-solid fa-house"></i>Dashboard
            </a>

            <a asp-page="/MyRequestsAccepted" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/myrequestsaccepted" ? "active" : "")">
                <i class="fa-solid fa-file-lines"></i>My Requests
            </a>

            <a asp-page="/Profile" class="@(PageContext.ActionDescriptor.ViewEnginePath == "/profile" ? "active" : "")">
                <i class="fa-solid fa-user"></i>Profile
            </a>
        </nav>

        <div class="user-box" id="profileBtn">
            <img src="~/images/IskoWalk.png" />
            <div class="user-info">
                <strong>juan.dc</strong>
                <span>Student</span>
            </div>
            <i class="fa-solid fa-chevron-down"></i>
        </div>

        <div class="dropdown" id="dropdownMenu">
            <div class="dropdown-user">
                <strong>juan.dc</strong>
                <small>juan.dc@iskolarngbayan.pup.edu.ph</small>
            </div>
            <hr />
            <a><i class="fa-solid fa-gear"></i> Setting</a>
            <a><i class="fa-solid fa-right-from-bracket"></i> Log out</a>
        </div>

    </aside>

    <main class="content">

        <div class="topbar">
            <div class="directory">Dashboard › My Requests › <b>Accepted Request</b></div>
            <a asp-page="/Create" class="btn-main">
                <i class="fa-solid fa-plus"></i> New Request
            </a>
        </div>

        <div class="divider"></div>

        <h2>My Activity</h2>
        <p class="subtitle">
            Track the requests you've created, the walks you've accepted, and view your activity history.
        </p>

        <div class="tabs">
            <a asp-page="/MyRequestsActive" class="tab">Active Request</a>
            <button class="tab active">Accepted Request</button>
            <button class="tab">History</button>
        </div>

        <div class="empty-state">
            <p class="title">You have no accepted walks.</p>
            <p class="subtitle">Accept a request from the dashboard to help a fellow Isko.</p>
            <a asp-page="/Dashboard" class="btn-main">View Available Requests</a>
        </div>

    </main>
</div>

<script>
    const btn = document.getElementById("profileBtn");
    const menu = document.getElementById("dropdownMenu");

    btn.onclick = () => menu.classList.toggle("show");

    document.addEventListener("click", e => {
        if(!btn.contains(e.target) && !menu.contains(e.target)){
            menu.classList.remove("show");
        }
    });
</script>

@page
@model IskoWalk.Pages.SignupModel
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">

    <div class="left-panel">
        <img src="/images/IskoWalk.png" class="logo" />
        <p>No Isko Walks Alone.</p>
    </div>

    <div class="right-panel">
        <h2>Create An Account</h2>
        <p>Join the community with your PUP email to get started.</p>

        <input placeholder="Full Name" />
        <input placeholder="PUP Webmail" />
        <input placeholder="Password" type="password" />

        <button class="btn-main">Create Account</button>

        <p class="small">Already have an account? <a href="/Login">Login</a></p>
    </div>

</div>
